FOR
  for переменная in слова; do ...; done - конструкция for
  for переменная; do ...; done - цикл по аргументам команды
  for (( i=начЗначение; i < конЗначение; i++ )); do ...; done - C подобная конструкция for

WHILE
  while условие; do ...; done - цикл пока условие истино
  until условие; do ...; done - цикл пока условие ложно
  while read line; do ...; done - цикл по строкам (помещаются в переменную line) стандартного потока ввода

ПРЕРЫВАНИЕ
  break - завершение ближайшего цикла
  continue - завершение итерации ближайшего цикла

ПЕРЕНАПРАВЛЕНИЕ
  for i in *; do echo $i; done > file - перенаправление всего вывода for в файл
